extends ../../layouts/default.pug
block main 
  if (product.title)
    h1(class="mb-4") #{product.title}

  if (product.price)
    h1(class="mb-4") Giá <b>#{product.price}$</b>

  if (product.discountPercentage)
    h1(class="mb-4") Giảm giá <b>#{product.discountPercentage}%</b>
  
  if (product.stock)
    h1(class="mb-4") Giá <b>#{product.stock}</b>

  if (product.thumbnail)
    div(class="mb-4")
      img(
        src=product.thumbnail 
        style="width: 100px"
      )

  if(product.status)
    div(class="mb-4")
      span Trạng thái: 
      if(product.status === "active")
        span(class="badge badge-success") Hoạt động
      else
        span(class="badge badge-danger") Dừng hoạt động

  if (product.position)
    h1(class="mb-4") Giá <b>#{product.position}</b> 

  if (product.description)
    h1(class="mb-4") Giá <b>#{product.description}</b> 

  a(
    href=`${prefixAdmin}/products/edit/${product.id}`
    class="btn btn-warning"
    ) Chỉnh sửa
  script(src="/admin/js/product.js")